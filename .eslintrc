{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "no-console": "warn",
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "semi": ["error", "never"],
    "prefer-template": "error",
    "prefer-arrow-callback": "warn",
    "prefer-const": "error",
    "quotes": ["error", "single"]
  }
}
